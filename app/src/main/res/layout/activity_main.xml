<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onAndroidClick"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:background="@color/toolbar"
       android:paddingStart="10sp"
       android:paddingTop="20sp"
       android:text="RouteAppOne"
       android:textColor="@color/white"
       android:textSize="25sp"
       app:layout_constraintHeight_percent="0.1"

       />

   <ImageView
       android:id="@+id/android_Photo"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginTop="20sp"
       android:adjustViewBounds="true"
       android:src="@drawable/android"
       app:layout_constraintHeight_percent="0.22"
       app:layout_constraintTop_toBottomOf="@id/toolbar" />

   <Button
       android:id="@+id/android_btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/button_color"
       android:text="ANDROID COURSE"
       android:textSize="17sp"
       app:layout_constraintTop_toBottomOf="@id/android_Photo"
       android:onClick="onAndroidClick"/>

   <ImageView
       android:id="@+id/ios_photo"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:adjustViewBounds="true"
       android:src="@drawable/ios"
       app:layout_constraintHeight_percent="0.22"
       app:layout_constraintTop_toBottomOf="@id/android_btn" />

   <Button
       android:id="@+id/ios_btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/button_color"
       android:text="IOS COURSE"
       android:textSize="17sp"
       app:layout_constraintTop_toBottomOf="@id/ios_photo"
       android:onClick="onIOSClick"/>

   <ImageView
       android:id="@+id/fullstack_photo"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:src="@drawable/fullstack"
       app:layout_constraintHeight_percent="0.22"
       app:layout_constraintTop_toBottomOf="@id/ios_btn" />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/button_color"
       android:text="FULLSTACK COURSe"
       app:layout_constraintTop_toBottomOf="@id/fullstack_photo"
android:onClick="onFullStackClick"
       />

</androidx.constraintlayout.widget.ConstraintLayout>